<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteSmoke"
    android:orientation="vertical"
    android:padding="5dp"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="108dp"
        android:background="#F5f5f5"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/header_title"
            android:text="登陆"
            style="@style/large_header_textview" />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_username"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="160dp"
        android:hint="账号"
        android:paddingStart="10dp"
        android:maxLines="1"
        android:maxLength="10"
        android:textColor="@color/black"
        android:textColorHint="@color/hint_text_color"
        android:textSize="36sp"
        android:theme="@style/MyEditText" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="密码"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:maxLines="1"
        android:maxLength="10"
        android:textColor="@color/black"
        android:textColorHint="@color/hint_text_color"
        android:textSize="36sp"
        android:theme="@style/MyEditText" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="160dp"
        android:hint="手机号"
        android:inputType="phone"
        android:visibility="gone"
        android:paddingStart="10dp"
        android:maxLines="1"
        android:maxLength="11"
        android:textColor="@color/black"
        android:textColorHint="@color/hint_text_color"
        android:textSize="36sp"
        android:theme="@style/MyEditText" />

    <LinearLayout
        android:id="@+id/ver_code_login"
        android:layout_width="400dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_verification_code"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="验证码"
            android:inputType="phone"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:maxLines="1"
            android:maxLength="6"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_text_color"
            android:textSize="36sp"
            android:theme="@style/MyEditText"/>

        <Button
            android:id="@+id/send_ver_code"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="发送"
            android:textSize="24sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_login_normal"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="36sp" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_update"
        android:text="新用户注册"
        android:textColor="@color/white"
        android:textSize="36sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/tv_ver_code_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:textSize="32sp"
            android:text="验证码登陆"
            android:textColor="@color/wechatText" />

        <TextView
            android:id="@+id/tv_password_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:visibility="gone"
            android:layout_marginStart="20dp"
            android:textSize="32sp"
            android:text="密码登陆"
            android:textColor="@color/wechatText" />

    </RelativeLayout>
</LinearLayout>